@model IEnumerable<ProductModel>

@{
    ViewData["Title"] = "List of products";
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12 background-color: yellow">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @item.ProductName
                                    <a class="text-white float-r"><i class="bi bi-pencil-square"></i></a>
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="@item.ProductImage"  width="150" height="150" alt="@item.ProductName" />
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text">@item.ProductDescription</p>
                            <p class="card-text">@item.Price</p>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer">
                            <p class="card-text">
                                <a class="btn btn-outline-primary float-right"><i class="bi bi-eye-fill"></i>Show Details</a>
                                <a class="btn btn-success text-white"><i class="bi bi-cart-plus"></i>Add to Cart($@item.Price)</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
